---
// Este Layout sirve para la p√°gina de inicio
const { title = "Despacho BC", favicon = "/favicon.svg" } = Astro.props;
import "../styles/global/fonts.css";
import "../styles/global/global.css";
import NavBarComponent from "../components/global/NavBarComponent.astro";
import FooterComponent from "../components/global/FooterComponent.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href={favicon} />
        <title>{title}</title>
    </head>
    <body>
        <NavBarComponent />
        <main>
            <slot />
        </main>
        <FooterComponent />
    </body>
    <style>
        body {
            margin: 0;
            width: 100%;
            height: 100%;
        }
    </style>
</html>
